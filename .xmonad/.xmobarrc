       Run Date "%a %b %_d %Y %H:%M:%S" "date" 10,
       Run StdinReader
    ]
    , sepChar = "%"
    , alignSep = "}{"
    , template = " %StdinReader%}{ <fc=#ee9a00>%date%</fc>"
}
